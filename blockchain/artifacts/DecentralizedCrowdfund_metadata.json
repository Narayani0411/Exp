		"devdoc": {
			"author": "@notice Contributors fund a campaign. Manager creates spending requests that contributors vote on. Refunds allowed if target not met by deadline.",
			"kind": "dev",
			"methods": {
				"constructor": {
					"params": {
						"_durationSeconds": "duration (seconds) from now until deadline",
						"_target": "funding goal in wei"
					}
				},
				"createRequest(string,address,uint256)": {
					"params": {
						"_description": "description of why funds are needed",
						"_recipient": "address to receive funds if request finalized",
						"_value": "amount in wei requested"
					}
				},
				"finalizeRequest(uint256)": {
					"params": {
						"requestId": "index of the request"
					}
				},
				"voteRequest(uint256)": {
					"params": {
						"requestId": "index of the request"
					}
				}
			},
			"title": "Decentralized Crowdfunding with Contributor Voting on Disbursements",
			"version": 1
		},
		"userdoc": {
			"kind": "user",
			"methods": {
				"contribute()": {
					"notice": "Contribute ETH to the crowdfunding campaign"
				},
				"createRequest(string,address,uint256)": {
					"notice": "Manager creates a spending request. Recipient will receive funds if contributors approve."
				},
				"finalizeRequest(uint256)": {
					"notice": "Finalize a request and send funds to recipient if majority voters approve and sufficient balance exists."
				},
				"getContributionOf(address)": {
					"notice": "Get contribution amount for an address"
				},
				"getRequest(uint256)": {
					"notice": "Utility to view certain fields of a request (mappings are not directly returnable)"
				},
				"getRequestsCount()": {
					"notice": "Returns number of requests"
				},
				"getSummary()": {
					"notice": "Get summary info about the campaign"
				},
				"hasVoted(uint256,address)": {
					"notice": "Check whether an address voted on a given request"
				},
				"refund()": {
					"notice": "Refund contributed ETH if deadline passed and target not reached. Contributor withdraws their own contribution."
				},
				"voteRequest(uint256)": {
					"notice": "Contributors vote for a request. Each contributor may vote once per request."
				}
			},
			"version": 1
		}
